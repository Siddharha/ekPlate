<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context="com.bluehorse.ekplate.registermodule.VegetarianSelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ekplate.android.views.BariolRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"
                        android:text="Are you "/>

                    <com.ekplate.android.views.BariolBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetarian"
                        android:textSize="30sp"
                        android:textColor="@color/theme_color"/>

                    <com.ekplate.android.views.BariolRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ?"
                        android:textSize="27sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="We acknowledge your"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"/>

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="preferences,"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"/>


                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="and give you an option to"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"/>

                <com.ekplate.android.views.BariolBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Block all non-vegetarian food"
                    android:textSize="25sp"
                    android:textColor="@color/theme_color"/>

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="from being displayed."
                    android:textSize="25sp"
                    android:textColor="@android:color/white"/>

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Would you like to activate"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"/>

                <com.ekplate.android.views.BariolBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Veg Only Mode?"
                    android:textSize="25sp"
                    android:textColor="@color/theme_color"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:orientation="vertical"
                android:layout_marginTop="12dip">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="   Veg  &amp; \n Non_veg"
                        android:lines="2"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"/>

                    <Switch
                        android:id="@+id/switchVegToggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:switchTextAppearance="@style/SwitchTextAppearance"
                        android:track="@drawable/switch_track_selection_gb"
                        android:thumb="@drawable/switch_thumb_selection_gb"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:padding="3dp"
                        android:text=" Veg Only"></TextView>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvEnterButton"
                    android:layout_width="150dip"
                    android:layout_height="48dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dip"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardBackgroundColor="#FEBE10"
                    card_view:cardElevation="3dip"
                    card_view:cardCornerRadius="4dp">

                    <com.ekplate.android.views.OpenSansSemiboldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ENTER"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center">

            <com.ekplate.android.views.BariolItalicTextView
                android:id="@+id/tvFooterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
