<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dip">

        <ImageView
            android:id="@+id/ivGalleryListImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rlGalleryImageItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/gallery_image_list_gradient">

            <ImageView
                android:id="@+id/ivFoodLikeGalleryList"
                android:layout_width="30dp"
                android:layout_height="30dip"
                android:src="@drawable/icon_like_gallery_image"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dip"
                android:layout_marginRight="17dip"
                android:clickable="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:padding="17dip">

                <com.ekplate.android.views.BariolBoldTextView
                    android:id="@+id/tvFoodNameGalleryList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinese Food Salad"
                    android:textColor="@android:color/white"
                    android:singleLine="true"
                    android:textSize="32sp"
                    android:visibility="gone"/>

                <com.ekplate.android.views.BariolLightTextView
                    android:id="@+id/tvCaptionGalleryList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinese Fast Food Center"
                    android:textColor="@android:color/white"
                    android:textSize="21.5sp"
                    android:singleLine="true"
                    android:layout_marginTop="2dip"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>