<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tbSocialFeed"
        layout="@layout/toolbar_layout" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="#ffffff">

        <android.support.design.widget.TabLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/taskTab">

        </android.support.design.widget.TabLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/content_pager_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/imageView7"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/tab_shadow" />
        </FrameLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llFbFeed"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:layout_margin="10dp"
                        android:background="#ffaa00"
                        android:scaleType="center"
                        android:padding="5dp" />

                    <com.ekplate.android.views.BariolRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook Feeds"
                        android:id="@+id/textView4"
                        android:layout_margin="10dp"
                        android:textSize="20sp" />

                </LinearLayout>
                </android.support.v7.widget.CardView>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp">

            <com.ekplate.android.views.BariolRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Feed Channel"
                android:id="@+id/textView8"
                android:layout_margin="5dp" />
        </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llIGFeed"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:layout_margin="10dp"
                    android:background="#ffaa00"
                    android:scaleType="center"
                    android:padding="5dp" />

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram Feeds"
                    android:id="@+id/textView6"
                    android:layout_margin="10dp"
                    android:textSize="20sp" />
            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llTTFeed"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_margin="10dp"
                android:background="#ffaa00"
                android:padding="5dp"
                android:scaleType="center" />

            <com.ekplate.android.views.BariolRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twitter Feeds"
                android:id="@+id/textView5"
                android:layout_margin="10dp"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>