<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llSocialFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSocialFeed"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/social_feedback_image"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dip">

            <com.ekplate.android.views.BariolBoldTextView
                android:id="@+id/tvSocialFeedHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing "
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="5dip"
                android:lines="2"
                android:visibility="gone"
                android:ellipsize="end"
                android:layout_margin="5dp" />

            <com.ekplate.android.views.BariolBoldTextView
                android:id="@+id/tvSocialFeedDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin quis laoreet nunc,"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:lines="4" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <com.ekplate.android.views.BariolRegularTextView
                    android:id="@+id/tvSocialFeedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 hrs ago"
                    android:textSize="13sp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/imgSocialType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_facebook_social_feed"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray"></FrameLayout>

</LinearLayout>