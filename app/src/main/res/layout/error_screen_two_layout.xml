<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivErrorMainImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_error_two"/>

    <com.ekplate.android.views.BariolRegularTextView
        android:id="@+id/tvErrorTwoMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:lines="3"
        android:textSize="18sp"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"/>

    <com.ekplate.android.views.BariolRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please try again later."
        android:textSize="18sp"
        android:layout_marginTop="10dip"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivLoaderErrorTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_loader"
        android:visibility="gone"
        android:layout_marginTop="20dip"/>

</LinearLayout>