<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".collegemodule.CollegeActivity">

    <include
        android:id="@+id/tbCollageList"
        layout="@layout/toolbar_layout"
        app:layout_scrollFlags="scroll|enterAlways"
        />

    <LinearLayout
        android:id="@+id/tabLayoutCollageList"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llMostLiked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/collage_tab_bg">

            <com.ekplate.android.views.BariolLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOST LIKED"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llByAlphabet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/collage_tab_bg">

            <com.bluehorse.views.BariolLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BY ALPHABET"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

     </LinearLayout>

    <FrameLayout
        android:id="@+id/flCollageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
