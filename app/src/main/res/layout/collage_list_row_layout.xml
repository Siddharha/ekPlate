<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:baselineAligned="true">

    <LinearLayout
        android:id="@+id/llVendorRowLayout"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_gravity="center|right|top"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="670dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivLikeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingRight="14dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ekplate.android.views.BariolRegularTextView
                    android:id="@+id/tvCollageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:layout_weight="1" />

                <com.ekplate.android.views.BariolRegularTextView
                    android:id="@+id/tvCollageAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_marginTop="7dip"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_marginLeft="4dp">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="23dip"
                android:src="@drawable/icon_distance"/>

            <com.ekplate.android.views.BariolRegularTextView
                android:id="@+id/tvCollageDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:gravity="center"
                android:maxLength="50"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
