<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bluehorse.ekplate.vendormodule.ReportProblemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#EFEFEF"
            android:paddingBottom="30dip">

            <LinearLayout
                android:id="@+id/llAddCollage"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:background="@color/theme_color"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <com.ekplate.android.views.BariolRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WHAT'S WRONG?"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="14dip"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <RelativeLayout
                        android:id="@+id/rlPhoneNoReportProblem"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:clickable="true">

                        <com.ekplate.android.views.BariolRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingLeft="14dip"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/ivPhoneNoSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selection_icon_tick"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="5dip"
                            android:layout_marginRight="10dip"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@android:color/darker_gray"
                            android:layout_alignParentBottom="true">

                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlAddressReportProblem"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:clickable="true">

                        <com.ekplate.android.views.BariolRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingLeft="14dip"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/ivAddressSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selection_icon_tick"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="5dip"
                            android:layout_marginRight="10dip"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@android:color/darker_gray"
                            android:layout_alignParentBottom="true">

                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlOutletClosed"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:clickable="true">

                        <com.ekplate.android.views.BariolRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outlet Closed"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingLeft="14dip"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/ivOutletClosedSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selection_icon_tick"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="5dip"
                            android:layout_marginRight="10dip"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@android:color/darker_gray"
                            android:layout_alignParentBottom="true">

                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlMenuIncorrect"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:clickable="true">

                        <com.ekplate.android.views.BariolRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu Incorrect / Outdated"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingLeft="14dip"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/ivMenuIncorrectSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selection_icon_tick"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="5dip"
                            android:layout_marginRight="10dip"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@android:color/darker_gray"
                            android:layout_alignParentBottom="true">

                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlImageNotAppropriate"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:clickable="true">

                        <com.ekplate.android.views.BariolRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Image Is Inappropriate"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingLeft="14dip"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/ivImageNotAppropriate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selection_icon_tick"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="5dip"
                            android:layout_marginRight="10dip"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:background="@android:color/darker_gray"
                            android:layout_alignParentBottom="true">

                        </FrameLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dip"
                    android:layout_weight="4.5"
                    android:weightSum="10"
                    android:orientation="vertical"
                    android:paddingTop="24dip"
                    android:paddingRight="14dip"
                    android:paddingLeft="14dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.75">

                        <EditText
                            android:id="@+id/etDetailedReport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:hint="Tap here to give us more details (Optional)"
                            android:inputType="textCapSentences"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7.25"
                        android:gravity="center"
                        android:paddingBottom="30dip">

                        <Button
                            android:id="@+id/btnSubmitReport"
                            android:layout_width="90dip"
                            android:layout_height="34dip"
                            android:background="@drawable/round_green_button"
                            android:text="SUBMIT"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/tbReportProblem"
        layout="@layout/toolbar_layout"/>

</RelativeLayout>