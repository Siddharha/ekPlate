<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border_bg"
    android:id="@+id/llCheckInPopup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCrossCheckinPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cross_black"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:padding="10dip"/>

        <com.ekplate.android.views.BariolBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_margin="10dip"
            android:textSize="25sp"
            android:text="Check in with"
            android:singleLine="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/etShareFeeling"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="8dip"
        android:layout_margin="10dip"
        android:background="@drawable/black_border_bg"
        android:hint="Share your feeling"
        android:visibility="gone"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_margin="10dip">

        <Button
            android:id="@+id/btnCheckInWithFb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/black_border_bg"
            android:text="Facebook"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:textColor="#6c9ad3" />

        <Button
            android:id="@+id/btnCheckInWithTwitter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/black_border_bg"
            android:text="Twitter"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:textColor="#6c9ad3" />

    </LinearLayout>

</LinearLayout>