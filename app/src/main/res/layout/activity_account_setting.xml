<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.ekplate.android.activities.menumodule.AccountSettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55000000"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dip"
                android:visibility="visible">

                <com.ekplate.android.views.CircularImageView
                    android:id="@+id/civProfileImageAccountSetting"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_centerInParent="true"
                    app:border_color="@color/theme_color"
                    app:border_width="1"/>

                <ImageView
                    android:id="@+id/ivEditProfileSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_camera_accout_setting"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="12dip"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:weightSum="12">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip">

                    <EditText
                        android:id="@+id/etUserNameAccountSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:hint="Name"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#F3F3F3"
                        android:layout_alignParentBottom="true"></FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip">

                    <EditText
                        android:id="@+id/etUserEmailIdAccountSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:hint="Email Id"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#F3F3F3"
                        android:layout_alignParentBottom="true"></FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip">

                    <EditText
                        android:id="@+id/etUserMobileNoAccountSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:editable="false"
                        android:hint="Mobile No"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#F3F3F3"
                        android:layout_alignParentBottom="true"></FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:id="@+id/llAddCollegeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <com.ekplate.android.views.BariolLightTextView
                                android:id="@+id/tvAddCollegeTextChangeProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Add College"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:gravity="center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:measureWithLargestChild="false">

                            <LinearLayout
                                android:id="@+id/llAddCollegeChangeProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/theme_color"
                                android:gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="30dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/plus_icon"
                                    android:padding="10dip"
                                    android:layout_gravity="center" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#F3F3F3"
                        android:layout_alignParentBottom="true"></FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip">

                        <com.ekplate.android.views.BariolLightTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_centerVertical="true"
                            android:text="Only Veg Mode"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"/>

                        <Switch
                            android:id="@+id/switchFoodTypeAccountSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:switchTextAppearance="@style/SwitchTextAppearance"
                            android:track="@drawable/switch_track_selection_gb"
                            android:thumb="@drawable/switch_thumb_selection_gb"
                            />

                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#F3F3F3"
                        android:layout_alignParentBottom="true"></FrameLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llCurrentCityStatus"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:clickable="true"
                    android:gravity="center">

                    <com.ekplate.android.views.BariolLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:text="Current City"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_weight="1"/>
                    <com.ekplate.android.views.BariolLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:id="@+id/tvCurrentCity"
                        android:text="Kolkata"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:layout_weight="0"/>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#F3F3F3"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:id="@+id/rlChangePasswordAccountSetting"
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:clickable="true">

                    <com.ekplate.android.views.BariolLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:text="Change Password"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/tbAccountSetting"
        layout="@layout/toolbar_layout"/>


</RelativeLayout>