<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dip">

        <com.specisl.ResideMenu.Views.CircularImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="120dip"
            android:layout_height="120dip"/>

        <com.specisl.ResideMenu.Views.BariolLightTextView
            android:id="@+id/tvProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginTop="8dip"
            android:textSize="34sp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_left_menu"
        android:layout_below="@+id/llProfileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layout_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>